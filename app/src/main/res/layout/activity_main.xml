<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
        <com.gcode.shapebutton.ShapeButton
            android:id="@+id/loading_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="@string/loading_page"
            android:textColor="@color/white"
            app:button_shape="rounded_rect_shape"
            app:button_rounded_rect_corner_radius="10dp"
            app:button_rect_width="1000dp"
            app:button_rect_height="80dp"
            app:button_is_solid="true"
            app:button_normal_bg_color="#00a8ff"/>

        <com.gcode.shapebutton.ShapeButton
            android:id="@+id/swipe_list_view_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="@string/swipe_list_view"
            android:textColor="@color/white"
            app:button_shape="rounded_rect_shape"
            app:button_rounded_rect_corner_radius="10dp"
            app:button_rect_width="1000dp"
            app:button_rect_height="80dp"
            app:button_is_solid="true"
            app:button_normal_bg_color="#e67e22"/>

        <com.gcode.shapebutton.ShapeButton
            android:id="@+id/base_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="@string/vast_base_adapter"
            android:textColor="@color/white"
            app:button_shape="rounded_rect_shape"
            android:textAllCaps="false"
            app:button_rounded_rect_corner_radius="10dp"
            app:button_rect_width="1000dp"
            app:button_rect_height="80dp"
            app:button_is_solid="true"
            app:button_normal_bg_color="#273c75"/>

    </LinearLayout>
</layout>