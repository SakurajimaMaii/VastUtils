<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="VastTheme" parent="@style/Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/vast_skin_primary</item>
        <item name="colorPrimaryVariant">@color/vast_skin_primary_variant</item>
        <item name="colorOnPrimary">@color/vast_skin_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/vast_skin_secondary</item>
        <item name="colorSecondaryVariant">@color/vast_skin_primary_variant</item>
        <item name="colorOnSecondary">@color/vast_skin_on_secondary</item>
        <!-- Surface color. -->
        <item name="colorSurface">@color/vast_skin_surface</item>
        <item name="colorOnSurface">@color/vast_skin_on_surface</item>
        <!-- Background color. -->
        <item name="backgroundColor">@color/vast_skin_background</item>
        <item name="colorOnBackground">@color/vast_skin_on_background</item>
        <!-- Error color. -->
        <item name="colorError">@color/vast_skin_error</item>
        <item name="colorOnError">@color/vast_skin_on_error</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="VastTheme.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">?colorSecondary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/VastTheme</item>
    </style>
</resources>